{
  "compilerOptions": { //配置变异选项
    "target": "ES2016",
    "module": "CommonJS",//模块化标准
    "lib": [
      "ES7"
    ],
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true, //启用es模块化标准和非es模块化标准进行交互
    "noEmitOnError": false,//错误是不生成编译结果
    "moduleResolution": "Node", //设置模块解析策略
    "strictPropertyInitialization": true,//类中严格属性初始化
  },
  // "files": [
  //   "./src/index.ts"
  // ],
  "include": [
    "./src"
  ], //只编译src下面的ts文件
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}